{#
Twig-Template: Generische Listing-Ausgabe (Migration von .html5)
Erwartete Variablen: items (Array), optional headline, description.
#}
{% extends "@Contao/frontend_module/_base.html.twig" %}

{% block content %}
    <div class="dc-generic-listing">
        {% if headline is defined and headline %}
            <h2>{{ headline }}</h2>
        {% endif %}

        {% if description is defined and description %}
            <div class="listing-description">{{ description|raw }}</div>
        {% endif %}

        {% if items is defined and items|length %}
            <ul class="dc-items">
                {% for it in items %}
                    <li class="dc-item">
                        <strong>{{ it.title|default(it.name|default('')) }}</strong>
                        {% if it.teaser is defined and it.teaser %}
                            <div class="teaser">{{ it.teaser|raw }}</div>
                        {% elseif it.description is defined and it.description %}
                            <div class="description">{{ it.description|raw }}</div>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Keine Eintr√§ge vorhanden.</p>
        {% endif %}
    </div>
{% endblock %}
